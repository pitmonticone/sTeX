  }{
    \exp_args:NNo \seq_if_in:NnTF \g_stex_ref_files_seq \l_@@_uri_str {
      \exp_args:Nnx \seq_if_in:cnTF{g_stex_ref_\l_@@_uri_str _seq}{\detokenize{#1}}{
        \_@@_do_autoref:n{\l_@@_uri_str?#1}
      }{
        \str_if_empty:NTF \l_@@_in_str {
          \_@@_do_autoref:n{#1}
        }{
          \_@@_do_sref_in:n{#1}
        }
      }
    }{
      \str_if_empty:NTF \l_@@_in_str {
        \_@@_do_autoref:n{#1}
      }{
        \_@@_do_sref_in:n{#1}
      }
    }
  }
}

