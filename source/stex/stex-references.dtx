        \str_if_empty:NTF \l_@@_cite_str{\tl_if_empty:nTF\l_@@_docname_tl{
          ???
        }\l_@@_docname_tl}{\cite{\l_@@_cite_str}}
      }
    }
  }{
    \stex_debug:nn{sref}{\l_@@_uri_str{}~ == ~ #1 ~ ?}
    \exp_args:No \str_if_eq:nnT \l_@@_uri_str {#1}{
      \stex_debug:nn{sref}{\l_@@_id_str~ == ~ #2 ~ ?}
